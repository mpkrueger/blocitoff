<% if @list.nil? %>
  <%= link_to "New To-Do List", new_list_path, class: 'btn btn-success' %>
<% end %>

<h1><%= @list.title %></h1>

<%= link_to "Edit List", edit_list_path, class: 'btn btn-success' %>

<%= link_to "Delete List", @list, method: :delete, class: 'btn btn-success', data: { confirm: "Are you sure you want to delete this list?" } %> 

<%= render partial: 'items/item', collection: @items %>


<%= render partial: 'items/form', locals: {list: @list} %>